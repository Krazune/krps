<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RedirectOnSessionFilter</filter-name>
        <filter-class>krazune.krps.SessionRedirectFilter</filter-class>
        <init-param>
            <param-name>redirect-url</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>redirect-on-user-session</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>url-list-parameter</param-name>
            <param-value>/loginuser,/login,/registration</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>RedirectOnSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>RedirectOnNoSessionFilter</filter-name>
        <filter-class>krazune.krps.SessionRedirectFilter</filter-class>
        <init-param>
            <param-name>redirect-url</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>redirect-on-user-session</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>url-list-parameter</param-name>
            <param-value>/logoutuser,/settings,/changeuserpassword,/playgame</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>RedirectOnNoSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.woff2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.woff</url-pattern>
	</servlet-mapping>
    <servlet>
        <servlet-name>IndexPageController</servlet-name>
        <servlet-class>krazune.krps.IndexPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginPageController</servlet-name>
        <servlet-class>krazune.krps.LoginPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUser</servlet-name>
        <servlet-class>krazune.krps.LoginUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutUser</servlet-name>
        <servlet-class>krazune.krps.LogoutUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationPageController</servlet-name>
        <servlet-class>krazune.krps.RegistrationPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUser</servlet-name>
        <servlet-class>krazune.krps.RegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingsPageController</servlet-name>
        <servlet-class>krazune.krps.SettingsPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeUserPassword</servlet-name>
        <servlet-class>krazune.krps.ChangeUserPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayGame</servlet-name>
        <servlet-class>krazune.krps.PlayGame</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPageController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginPageController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUser</servlet-name>
        <url-pattern>/loginuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutUser</servlet-name>
        <url-pattern>/logoutuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationPageController</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/registeruser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingsPageController</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeUserPassword</servlet-name>
        <url-pattern>/changeuserpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayGame</servlet-name>
        <url-pattern>/playgame</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
