<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RedirectOnSessionFilter</filter-name>
        <filter-class>krazune.krps.user.filters.SessionRedirectFilter</filter-class>
        <init-param>
            <param-name>redirect-url</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>redirect-on-user-session</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>url-list-parameter</param-name>
            <param-value>/login,/registration</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>PropertiesLoaderFilter</filter-name>
        <filter-class>krazune.krps.util.filters.PropertiesLoaderFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RedirectOnNoSessionFilter</filter-name>
        <filter-class>krazune.krps.user.filters.SessionRedirectFilter</filter-class>
        <init-param>
            <param-name>redirect-url</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>redirect-on-user-session</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>url-list-parameter</param-name>
            <param-value>/logoutuser,/settings</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PropertiesLoaderFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RedirectOnSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RedirectOnNoSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>StatisticsPageController</servlet-name>
        <servlet-class>krazune.krps.statistics.pagecontrollers.StatisticsPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformationPageController</servlet-name>
        <servlet-class>krazune.krps.util.pagecontrollers.InformationPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.txt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.svg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexPageController</servlet-name>
        <servlet-class>krazune.krps.util.pagecontrollers.IndexPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginPageController</servlet-name>
        <servlet-class>krazune.krps.user.pagecontrollers.LoginPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutUser</servlet-name>
        <servlet-class>krazune.krps.user.actions.LogoutUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationPageController</servlet-name>
        <servlet-class>krazune.krps.user.pagecontrollers.RegistrationPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingsPageController</servlet-name>
        <servlet-class>krazune.krps.util.pagecontrollers.SettingsPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPageController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginPageController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutUser</servlet-name>
        <url-pattern>/logoutuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationPageController</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingsPageController</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsPageController</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformationPageController</servlet-name>
        <url-pattern>/information</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
