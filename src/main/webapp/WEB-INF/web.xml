<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<filter>
		<filter-name>RedirectOnSessionFilter</filter-name>
		<filter-class>krazune.krps.user.filters.SessionRedirectFilter</filter-class>
		<init-param>
			<param-name>redirect-url</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>redirect-on-user-session</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>url-list-parameter</param-name>
			<param-value>/login,/registration</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>RedirectOnNoSessionFilter</filter-name>
		<filter-class>krazune.krps.user.filters.SessionRedirectFilter</filter-class>
		<init-param>
			<param-name>redirect-url</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>redirect-on-user-session</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>url-list-parameter</param-name>
			<param-value>/logout,/settings</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>RedirectOnSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>RedirectOnNoSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>Game</servlet-name>
		<servlet-class>krazune.krps.game.servlet.GamePageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>krazune.krps.user.servlet.RegistrationPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>krazune.krps.user.servlet.LoginPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Statistics</servlet-name>
		<servlet-class>krazune.krps.servlet.StatisticsPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Information</servlet-name>
		<servlet-class>krazune.krps.servlet.InformationPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Settings</servlet-name>
		<servlet-class>krazune.krps.servlet.SettingsPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>krazune.krps.user.servlet.LogoutPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Game</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Statistics</servlet-name>
		<url-pattern>/statistics</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Information</servlet-name>
		<url-pattern>/information</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Settings</servlet-name>
		<url-pattern>/settings</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.woff2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.woff</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.svg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.txt</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>krazune.krps.MainServletContextListeneter</listener-class>
	</listener>
</web-app>
